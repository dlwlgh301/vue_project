<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.curation.dao.user.UserDao">

    <select id="getUserByEmail" resultType="com.web.curation.model.user.User" parameterType="string">
        select * from user
        where email=#{value}
    </select>

    <select id="getNickNameByEmail" resultType="string" parameterType="string">
        select nickName from user
        where email=#{value}
    </select>

    <select id="getEmail" resultType="string" parameterType="string">
        select email from user
        where email= #{value}                   
    </select>

    <select id="getNickname" resultType="string" parameterType="string">
        select nickName from user
        where nickName = #{value}
    </select>

    <insert id="insertUser" parameterType="com.web.curation.model.user.User">
        insert into user(email,password,name,nickName,comment,keyword,imgURL) 
        values(#{email}, #{password}, #{name}, #{nickName}, #{comment}, #{keyword}, #{imgURL} )
    </insert>

    <select id="login" resultType="com.web.curation.model.user.User" parameterType="com.web.curation.model.user.User" >
        select * from user 
        where email=#{email} and password=#{password}
    </select>

    <select id="getUser" resultType="com.web.curation.model.user.User" parameterType="string">
        select * from user
        where email=#{value}
    </select>

     <update id="updateUser" parameterType="com.web.curation.model.user.User">
        update user set password=#{password}, name=#{name}, comment=#{comment}, keyword=#{keyword}, imgURL=#{imgURL}
        where email=#{email}
    </update>

    <update id="updatePass" parameterType="com.web.curation.model.user.User">
        update user set password=#{password}
        where email=#{email}
    </update>

    <select id="getImgURL" parameterType="string" resultType="string">
        select imgURL from user where email = #{value}
    </select>
</mapper>