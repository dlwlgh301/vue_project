<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.curation.dao.request.RequestDao">
 
    <select id="getRequest" parameterType="string" resultType="com.web.curation.model.vo.Request">
        select * from request
        where requestee = #{value}
    </select>

    <insert id="insertRequest" parameterType="com.web.curation.model.vo.Request">
        insert into request(requester, requesterNick, requestee, requesteeNick, requesterImg) 
        values(#{requester}, #{requesterNick}, #{requestee}, #{requesteeNick}, #{requesterImg})
    </insert>

    <delete id="deleteRequest" parameterType="int">
        delete from request where rid = #{value}
    </delete>

    <select id="getInfo" parameterType="int" resultType="com.web.curation.model.vo.Request">
        select * from request where rid = #{value}
    </select>

    <select id="isRequest" parameterType="com.web.curation.model.vo.Request" resultType="int">
        select count(*) from request where requester = #{requester} and requestee = #{requestee} 
    </select>
</mapper>