<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.curation.dao.user.FollowDao">
    <select id="folloingList" resultType="com.web.curation.model.vo.Follow" parameterType="string">
        select * from follow
        where follower = #{value}
    </select>

    <select id="followerList" resultType="com.web.curation.model.vo.Follow" parameterType="string">
        select * from follow
        where folloing = #{value}
    </select>
    
    <insert id="addFollow" parameterType="com.web.curation.model.vo.Follow">
        insert into follow(follower, followernickName, following, folloingnickName)
        values(#{follower}, #{followernickName}, #{following}, #{folloingnickName})
    </insert>

    <delete id="deleteFollow" parameterType="com.web.curation.model.vo.Follow">
        delete from follow 
        where follower=#{follower} and following = #{following}
    </delete>

    <select id="followCheck" resultType="int" parameterType="string">
        select count(*) from follow
        where follower=#{follower} and folloing = #{folloing}
    </select>

</mapper>