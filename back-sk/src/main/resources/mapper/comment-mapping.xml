<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.curation.dao.review.ImgDao">
    <insert id="insertComment" parameterType="com.web.curation.model.vo.Img">
        insert into comment(reviewNum, content, email, nickName, imgURL)
        values(#{reviewNum}, #{content}, #{email}, #{nickName}, #{imgURL})
    </insert>
    <select id="getComment" parameterType="int" resultType="com.web.curation.model.vo.Comment">
        select * from comment where reviewNum = #{value}
    </select>
    <delete id="deleteComment" parameterType="int">
        delete from comment where reviewNum = #{value}
    </delete>
    <select id="getCommentNum" parameterType="int" resultType="int">
        select count(*) from comment where reviewNum = #{value}
    </select>
</mapper>